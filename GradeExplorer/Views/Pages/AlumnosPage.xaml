<Page x:Class="GradeExplorer.Views.Pages.AlumnosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GradeExplorer.Views.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:vm="clr-namespace:GradeExplorer.ViewModels.PagesVM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AlumnosPage">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>

    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <StatusBarItem>
                Cargando datos...
            </StatusBarItem>
            <StatusBarItem Margin="15, 0, 0, 0">
                <ProgressBar IsIndeterminate="True" Width="125"/>
            </StatusBarItem>
        </StatusBar>

        <StackPanel>
            <TextBlock Style="{StaticResource SubheaderTextBlockStyle}" HorizontalAlignment="Center">Lista de Alumnos</TextBlock>
            <ui:CommandBar DefaultLabelPosition="Bottom" Margin="0, 5, 0, 5" HorizontalAlignment="Center" OverflowButtonVisibility="Auto">
                <ui:AppBarButton Icon="Add" Label="Crear" Command="{Binding AddCommand}"/>
                <ui:AppBarSeparator />

                <ui:AppBarButton Icon="Edit" Label="Editar" Command="{Binding EditCommand}"/>
                <ui:AppBarSeparator />

                <ui:AppBarButton Icon="Delete" Label="Eliminar" Command="{Binding DeleteCommand}"/>
            </ui:CommandBar>
            <DataGrid 
                ItemsSource="{Binding ListaAlumnos}"
                SelectedItem="{Binding AlumnoSeleccionado}"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                IsReadOnly="True" 
                SelectionMode="Single"
                GridLinesVisibility="All"
                VerticalScrollBarVisibility="Hidden"
                HorizontalScrollBarVisibility="Hidden"
            >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Path=Id}" Width="64" SortDirection="Ascending" />
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Path=Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Apellido 1" Binding="{Binding Path=Apellido1}" Width="*"/>
                    <DataGridTextColumn Header="Apellido 2" Binding="{Binding Path=Apellido2}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <ui:ContentDialog
                x:Name="DialogoAlumno"
                Title="Nuevo/Editar Alumno"
                PrimaryButtonText="Confirmar"
                SecondaryButtonText="Cancelar"
                Visibility="{Binding ShowAlumnosDialog, Converter={StaticResource BoolToVis}}"
                >
                <StackPanel x:Name="StackDialogo">
                    <TextBlock Style="{StaticResource BodyTextBlockStyle}">ID</TextBlock>
                    <TextBox IsReadOnly="True"></TextBox>

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}">Nombre</TextBlock>
                    <TextBox></TextBox>

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}">Apellido 1</TextBlock>
                    <TextBox></TextBox>
                    <TextBlock Style="{StaticResource BodyTextBlockStyle}">Apellido 2</TextBlock>
                    <TextBox></TextBox>
                </StackPanel>
            </ui:ContentDialog>
        </StackPanel>
    </DockPanel>
</Page>
