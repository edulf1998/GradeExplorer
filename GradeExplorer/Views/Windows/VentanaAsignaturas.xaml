<Window x:Class="GradeExplorer.Views.Windows.VentanaAsignaturas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeExplorer.Views.Windows"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Ventana Asignatura" Height="450" Width="400">
    <Border
        Padding="15"
        >
        <ScrollViewer>
            <StackPanel>
                <TextBlock Style="{StaticResource BodyTextBlockStyle}">ID</TextBlock>
                <TextBox IsReadOnly="True" Text="{Binding Asignatura.Id}"></TextBox>

                <TextBlock Style="{StaticResource BodyTextBlockStyle}">Nombre</TextBlock>
                <TextBox Text="{Binding Asignatura.Nombre}"></TextBox>

                <TextBlock Style="{StaticResource BodyTextBlockStyle}">Profesor</TextBlock>
                <ComboBox ItemsSource="{Binding Profesores}" SelectedItem="{Binding Profesor}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{Binding Path = Nombre}"/>
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="  " />
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{Binding Path = Apellido1}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Style="{StaticResource BodyTextBlockStyle}">Alumnos Matriculados</TextBlock>
                <ui:CommandBar DefaultLabelPosition="Bottom" Margin="0, 5, 0, 5" HorizontalAlignment="Center" OverflowButtonVisibility="Auto">
                    <ui:AppBarButton Icon="Add" Label="Crear" Command="{Binding AddAlumnoCommand}"/>
                    <ui:AppBarSeparator />
                    <ui:AppBarButton Icon="Delete" Label="Eliminar" Command="{Binding DeleteAlumnoCommand}"/>
                </ui:CommandBar>
                <ListBox ItemsSource="{Binding Alumnos}" SelectedItem="{Binding AlumnoSeleccionado}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{Binding Path = Nombre}"/>
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="  " />
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{Binding Path = Apellido1}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Border Padding="0, 15, 0, 0">
                    <Button HorizontalAlignment="Stretch" Command="{Binding ConfirmCommand}">Confirmar</Button>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
